# ShellCheck configuration for ilma project

# Allow dynamic sourcing, config files, and unused exports
disable=SC1090  # non-constant source
disable=SC1091  # can't follow sourced files
disable=SC2034  # unused vars (used via export or externally)

# Allow intentional unquoted expansions and $? checks
disable=SC2086  # unquoted expansion (e.g. find PRUNE_EXPR)
disable=SC2181  # checking $? instead of inlining commands

